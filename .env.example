# Development Environment Variables
# Copy this file to .env and modify as needed

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5433/postgres
POSTGRES_DB=postgres
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# Authentication
BETTER_AUTH_SECRET=your_secret_key_here
BETTER_AUTH_URL=http://localhost:3000
NEXT_PUBLIC_BETTER_AUTH_URL=http://localhost:3000

# JWT Configuration (Generate secure random strings)
JWT_ACCESS_SECRET=your_jwt_access_secret_key_here_32_chars_min
JWT_REFRESH_SECRET=your_jwt_refresh_secret_key_here_32_chars_min

# Application Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development

# Email Configuration
EMAIL_PROVIDER=dev # Options: dev, smtp, sendgrid

# SMTP Configuration (if EMAIL_PROVIDER=smtp)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# SendGrid Configuration (if EMAIL_PROVIDER=sendgrid)
SENDGRID_API_KEY=your_sendgrid_api_key_here

# Email Settings
EMAIL_FROM=noreply@epop-platform.com
EMAIL_REPLY_TO=support@epop-platform.com

# File Storage (MinIO)
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=epop-files
MINIO_USE_SSL=false

# Redis Configuration (for real-time features)
REDIS_URL=redis://localhost:6379

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000 # 15 minutes in milliseconds
RATE_LIMIT_MAX_REQUESTS=100

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=your_session_secret_key_here_32_chars_min

# Logging
LOG_LEVEL=info # Options: debug, info, warn, error